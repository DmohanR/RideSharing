<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="5dp"
    android:padding="6dp">

 <LinearLayout
    android:id="@+id/card_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:contentDescription="carImage"
            android:src="@drawable/carimg"
            android:elevation="5dp"
            android:padding="8dp"/>
       </LinearLayout>

        <ImageView
            android:id="@+id/divider"
            android:background="@color/colorPrimaryLight"
            android:layout_margin="8dp"
            android:layout_height="1dp"
            android:layout_width="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_name"
            android:textSize="17sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/no_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seats"
            android:textSize="14sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/v_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vid"
            android:textSize="14sp"
            android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#cfcfcf"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"/>
     <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:padding="10dp">
         <LinearLayout
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@drawable/shape_rectangle1"
             android:padding="5dp">
             <TextView
                 android:id="@+id/price50"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:textSize="14sp"
                 android:textColor="#000000"
                 android:layout_gravity="center"
                 android:text="price"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:layout_gravity="center"
                 android:textColor="#000000"
                 android:textSize="8sp"
                 android:text="50 Miles"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:orientation="vertical"
             android:background="@drawable/shape_rectangle1"
             android:padding="5dp">
             <TextView
                 android:id="@+id/price100"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:textSize="14sp"
                 android:layout_gravity="center"
                 android:textColor="#000000"
                 android:text="price"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:textSize="8sp"
                 android:layout_gravity="center"
                 android:textColor="#000000"
                 android:text="50 Miles"/>

         </LinearLayout>
         <View
             android:layout_width="1dp"
             android:layout_height="0dp"
             android:layout_weight="1"/>
        <Button
            android:id="@+id/book_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/book"
            android:background="#0d992e"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

 </LinearLayout>

</android.support.v7.widget.CardView>